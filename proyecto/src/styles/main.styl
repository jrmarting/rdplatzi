@import './normalize.css'
@import './reset'

$black = #212121
$white = #FAFAFA

body
	font-size 16px
	font-family 'lobster'

.header
	background-color $black
	color $white
	height 64px
	position fixed 
	top 0 
	left 0
	width 100%
	z-index 10
	line-height 64px

	&--ligth
		background-color $white
		color $black

	&-mobile
		display flex
		justify-content space-between

	&-logo
		order 1
		margin-left 1rem

	&-btn-nav
		order 2
		border 0
		border-radius 5px
		background-color $black
		padding 0
		margin-right 1rem
		color $white

	&-menu-navbar
		background-color $black

	&-menu-list
		background-color $black
		list-style-type none
		height 0
		overflow hidden
		transition height .3s ease
		
		&--show
			height 300px

		&-item
			a
				text-decoration none
				color $white
				width 100%
				padding 0.3rem
				display block

@media (min-width: 768px)
	.header
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		height 80px
		transition all .3s ease
		line-height 80px

		&-logo
			margin-left 2rem

		&-btn-nav
			margin-right 2rem
			display none

		&-menu-list
			height 80px

			&-item
				display inline-block
				margin 0 2rem

			a
				padding 0 1em
				
@import './video'
@import './content'


